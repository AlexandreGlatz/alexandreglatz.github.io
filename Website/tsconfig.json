
{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "*": ["./node_modules/*", "./types/*"]
    },
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}